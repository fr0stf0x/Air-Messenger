<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAvatar"
        style="@style/Circle52dp"
        android:backgroundTint="@color/colorSecondary"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_person_outline_white_24dp" />

    <LinearLayout
        style="@style/SmallPaddingOvalBox52dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/text_yourself"
            android:textAppearance="@android:style/TextAppearance.Material.Display2"
            android:textSize="@dimen/large_text" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/default_status"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>