<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="buttonStyle">@style/buttonStyleFirstTheme</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="actionBarStyle">@style/AppBarOverlay</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryColorSecond</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkColorSecond</item>
        <item name="buttonStyle">@style/buttonStyleSecondTheme</item>
        <item name="android:textColor">@color/colorPrimaryTextColorSecond</item>
        <item name="colorAccent">@color/colorSecondaryColorSecond</item>
        <item name="actionBarStyle">@style/AppBarOverlay</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryColorThird</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkColorThird</item>
        <item name="android:textColor">@color/colorPrimaryTextColorThird</item>
        <item name="buttonStyle">@style/buttonStyleThirdTheme</item>
        <item name="colorAccent">@color/colorSecondaryColorThird</item>
    </style>

    <style name="buttonStyleFirstTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="buttonStyleSecondTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:backgroundTint">@color/colorSecondaryColorSecond</item>
        <item name="android:textColor">@color/colorSecondaryTextColorSecond</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonStyleThirdTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:backgroundTint">@color/colorSecondaryColorThird</item>
        <item name="android:textColor">@color/colorSecondaryTextColorThird</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppBarOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="OvalBox52dp">
        <item name="android:background">@drawable/chat_bottom_bar</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SmallPaddingOvalBox52dp">
        <item name="android:background">@drawable/chat_bottom_bar</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Circle52dp">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:background">@drawable/circle_shape_52dp</item>
    </style>

</resources>
