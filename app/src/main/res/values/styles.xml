<resources>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="buttonStyle">@style/buttonStyleDark</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="actionBarStyle">@style/AppBarOverlay</item>
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>


    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor.Light</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor.Light</item>
        <item name="android:textColor">@color/primaryTextColor.Light</item>
        <item name="buttonStyle">@style/buttonStyleLight</item>
        <item name="colorAccent">@color/secondaryColor.Light</item>
        <item name="actionBarStyle">@style/AppBarOverlay</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NoActionBarTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor.Light</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor.Light</item>
        <item name="android:textColor">@color/primaryTextColor.Light</item>
        <item name="buttonStyle">@style/buttonStyleLight</item>
        <item name="colorAccent">@color/secondaryColor.Light</item>
        <item name="android:fontFamily">@font/montserrat</item>

        <!--ActionMode-->
        <item name="android:windowNoTitle">true</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primaryColor.Light</item>
    </style>

    <style name="NoActionBarTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="buttonStyle">@style/buttonStyleDark</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="buttonStyleDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:backgroundTint">@color/secondaryDarkColor.Light</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonStyleLight" parent="buttonStyleDark">
        <item name="android:backgroundTint">@color/secondaryDarkColor.Light</item>
    </style>

    <style name="AppBarOverlay" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppBarOverlay.Light" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="OvalBox48dp">
        <item name="android:background">@drawable/chat_bottom_bar</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SmallPaddingOvalBox48dp">
        <item name="android:background">@drawable/chat_bottom_bar</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Circle36dp">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>

    <style name="Circle48dp">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>

    <style name="Circle52dp">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>

</resources>
